<%if @user.errors.messages.length > 0%>
    <h1><%="There where some errors: "%></h1>
    <% @user.errors.full_messages.each do |msg|%>
    <%=msg%><br>
    <%end%>
<%end%>

<%= form_for(@user) do |f| %>
<%=f.label :username %>
<%=f.text_field :username%>

 <%= f.label :password %>
 <%= f.password_field :password %>

<%=f.submit%>
<%end%>
