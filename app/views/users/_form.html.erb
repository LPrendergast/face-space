<%if @user.errors.messages.length > 0%>
    <h1><%="There where some errors: "%></h1>
    <% @user.errors.full_messages.each do |msg|%>
    <%=msg%><br>
    <%end%>
<%end%>

<%= form_for(@user) do |f| %>

    *<%=f.label :username %>
    <%=f.text_field :username%>

    *<%= f.label :password %>
    <%= f.password_field :password %>
    
        <%= f.label :bio %>
    <%= f.text_field :bio %>

    <%= f.label :hobbies %>
    <%= f.text_field :hobbies %>

    <%= f.label :age %>
    <%= f.number_field :age %>

    <%= f.label :country %>
    <%= f.text_field :country %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>

    <%= f.label :image_url %>
    <%= f.text_field :image_url %>

    <%=f.submit%>
<%end%>
