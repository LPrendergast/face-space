<%=render 'search'%>
<%if @users != []%>
<% @users.each do |user| %>
    <h1>Username: <%=link_to user.username, user_path(user) %></h1><br>

    <%if current_user%>
        <%unless user.friend?(current_user) || user == current_user%>
            <%if current_user.friend?(user)%>
                <%= link_to "Accept Friend Request", add_friend_path(:user=>{friendee_id: user.id, friender_id: current_user.id}), method: :post%>
            <%else%>
                <%= link_to "Add Friend.", add_friend_path(:params => :user=>{friendee_id: user.id, friender_id: current_user.id})%>
            <%end%>
            
        <%end%>
    <%end%>
<%end%>
<%else%>
<h1>We could not find any users!</h1>
<%end%>
