<!DOCTYPE html>
<html>
  <head>
    <title>FaceSpace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="global_container">


    <div class="top_container">
      <%= image_tag("logo.png") %>
      
      <ul>
      <% if current_user#need to control what navbars are shown when logged in or not %>
        <li id="logged_in_as">You're logged in as: <%= current_user.username%></li>
        <li><%= link_to "Log out", logout_path, method: :delete%></li>
        <li><%= link_to "User page", user_path(current_user)%></li>
        <% end %>
        <li><%= link_to "View Users", users_path%></li>
        <li><%= link_to "View Pages", pages_path%></li>
        
      </ul>
      
    </div>



<div class="body_container">
  <div class="wrapper">

  <div class="column" id="left">
    <div class= "left-box" id="user-info">
      <h1><%=render "users/user_info"%></h1>
    </div>

    <div class="left-box" id="messages" >
      <h1></h1>
    </div>
  </div>

  <div class="column" id="middle">
    <%= yield %>
  </div>

  <div class="column" id="right">
    <div class= "right-box" id="log-in">
      <h1>
      <%if current_user %>
        <%="Hello " + current_user.username%>
      <%else%>
        <%=render "sessions/login"%>
      <%end%>
      </h1>
    </div>

    <div class= "right-box" id="friends-list">
      <h1>@friends_info</h1>
    </div>
  </div>

  </div>
</div>


<div class="footer_container">
  <% if current_user %>
  <ul>
    <li><%= link_to "Log out", logout_path, method: :delete%></li>
  </ul>
  <% end %>
</div>



  </div>

  </body>
</html>
