<!DOCTYPE html>
<html>
  <head>
    <title>FaceSpace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <h3>You're logged in as: <%= current_user.username%></h3>
      <nav>
      <%= link_to "Log out", logout_path, method: :delete%>
      <%= link_to "User page", user_path(current_user)%>
      <%= link_to "View Users", users_path%>
      <%= link_to "View Pages", pages_path%>
      </nav>
    <% end %>

    <%= yield %>
  </body>
</html>
